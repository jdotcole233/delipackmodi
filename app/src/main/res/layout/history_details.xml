<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/popup_messages_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/history_header_background"

            >
            <ImageButton
                android:id="@+id/history_close"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:background="@drawable/history_header_background"
                android:contentDescription="@string/back_key" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center"
                android:text="@string/history_details"
                android:textColor="#FFF"
                android:textSize="15sp"
                tools:targetApi="o" />

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="490dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#f2f2f2"

                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:padding="3dp"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/pick_up"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_pickup"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:padding="10dp"
                            android:text="@string/ashonmang_abokobi_road"
                            android:fontFamily="sans-serif-light"

                            />


                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/deliver_to"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_deliver"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/wisconsin_abokobi_road"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/company"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_company_name"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/vickavelli_delivery"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/rider"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_rider_name"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/kwasi_asamoah"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/bike"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_bike_reg"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/gs_3472"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />
                    </TableRow>
                </TableLayout>


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFF" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="7dp"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/date"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_date"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/tue_apr_16_2019_17_43_21"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/trans_id"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_trans_number"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/tg63552635"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/status"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_status"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#009624"
                            android:text="@string/success"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />

                    </TableRow>

                </TableLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFF" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="7dp"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/payment"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_payment_type"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/mobile_money"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/charges"
                            android:padding="10dp"
                            android:fontFamily="@font/amiko_semibold"
                            />

                        <TextView
                            android:id="@+id/history_total_cost"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:text="@string/ghs_15_89"
                            android:padding="10dp"
                            android:fontFamily="sans-serif-light"

                            />
                    </TableRow>


                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFF"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#f2f2f2"
                    android:elevation="13dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp" tools:targetApi="lollipop">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/_1_900"
                            android:textColor="#000"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/deliveries"
                            android:textColor="#a6a6a6"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:padding="5dp"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#f2f2f2"
                    android:elevation="13dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"

                    tools:targetApi="lollipop"
                    android:layout_marginEnd="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/rating"
                            android:textColor="#000"
                            android:textSize="23sp"
                            android:gravity="center"
                            android:padding="10dp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/rating_label"
                            android:textColor="#a6a6a6"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:padding="5dp"

                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#f2f2f2"
                    android:elevation="13dp"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"

                    tools:targetApi="lollipop">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/months_value"
                            android:textColor="#000"
                            android:textSize="23sp"
                            android:gravity="center"
                            android:padding="10dp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/months_label"
                            android:textColor="#a6a6a6"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:padding="5dp"

                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>