<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/splashscreen_background"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/deli_s" />

        <ImageView
            android:id="@+id/minimizeprogress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_expand_more_black_24dp"
            android:background="@drawable/register_btn_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <!--Company logo display section-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/deli_s"
                />


        </LinearLayout>
        <!--End of company logo display-->

        <!--Company package transport information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Reg Number"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick up location"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination Location"
                android:textColor="#000"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:id="@+id/canceltripinaction"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Cancel"
            android:background="@drawable/register_btn_background"
            android:textColor="#FFF"
            />

        <Button
            android:id="@+id/callcustomer"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Call"
            android:layout_marginLeft="10dp"
            android:background="@drawable/confirm_button"
            android:textColor="#FFF"
            />
    </LinearLayout>
</LinearLayout>