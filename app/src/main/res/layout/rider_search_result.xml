<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_screen_background">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/splashscreen_background"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:fontFamily="@font/amiko_semibold"
            android:gravity="center"
            android:text="Search Result"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </FrameLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/search_result_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Found {number} riders near you"
                    android:textColor="@color/colorAccent"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:textAlignment="center"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/deli" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number: GS-234"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rider: Kwasi Amoako"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-light"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="13dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#eceff1"
                    app:cardElevation="10dp"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price (GHS)"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-light"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" 15.0"
                        android:textAlignment="center"
                        android:textSize="29dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="30dp"
                        />

                </android.support.v7.widget.CardView>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/confirmation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:text="Select your payment method"
                        android:fontFamily="sans-serif-light"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />

                    <Button
                        android:id="@+id/confirm_payment"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/confirm_button_bg"
                        android:text="confirm payment"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:visibility="invisible"
                        />
                    <Spinner
                        android:id="@+id/payment_choice"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/rounded_input_signin"
                        android:spinnerMode="dropdown"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        >
                    </Spinner>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="13dp"
                        >
                        <ImageButton
                            android:id="@+id/cancelsearchresult"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="110dp"
                            app:srcCompat="@drawable/ic_close_black_24dp"
                            android:padding="10dp"
                            android:background="@drawable/confirm_button"
                            android:layout_marginLeft="1dp"


                            />
                        <Button
                            android:id="@+id/make_payment"
                            android:layout_width="310dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="110dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/confirm_button_bg"
                            android:text="payment"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>