<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/popup_messages_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/history_header_background"

            >
            <ImageButton
                android:id="@+id/report_close"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:background="@drawable/history_header_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:fontFamily="@font/amiko_semibold"
                android:gravity="center"
                android:text="Report a problem"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f2f2f2"
        >

        <Spinner
            android:id="@+id/report_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_actual_roundedbackground"
            android:popupTheme="@drawable/input_actual_roundedbackground"
            android:padding="10dp"
            android:elevation="1dp"
            >
        </Spinner>

        <TextView
            android:id="@+id/problemdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="#a6a6a6"
            android:background="#f2f2f2"
            android:textSize="14sp"
            android:elevation="1dp"
            android:padding="10dp"
            android:text="Hello DeliPack"
            />
        <EditText
            android:id="@+id/reportmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="40"
            android:inputType="textMultiLine"
            android:hint="Enter your message"
            android:textColorHint="#a6a6a6"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:padding="20dp"
            android:background="@drawable/input_actual_roundedbackground"
            android:elevation="1dp"


            />

        <Button
            android:id="@+id/sendcustomerreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send report"
            android:background="@drawable/history_header_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="15dp"
            android:elevation="20dp"

            />



    </LinearLayout>



</LinearLayout>