<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/splashscreen_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/logoframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="140dp"
                >
                <ProgressBar
                    android:id="@+id/loginloader"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko_bold"
                    android:text="Lets get started"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/deli_s"
                    tools:ignore="VectorDrawableCompat"
                    />
            </LinearLayout>



            <EditText
                android:id="@+id/customerPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_input_signin"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/textcolors"
                android:layout_below="@+id/logoframe"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                />

            <EditText
                android:id="@+id/customerPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_input_signin"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/textcolors"
                android:layout_below="@+id/customerPhoneNumber"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/customerSigninButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/register_btn_background"
                android:elevation="40dp"
                android:fontFamily="@font/amiko_semibold"
                android:text="Sign in"
                android:textColor="@android:color/background_light"
                android:textSize="13sp"
                android:layout_below="@+id/customerPassword"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/customerSigninButton"
                >
                <Button
                    android:id="@+id/backtohomebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/join_us"
                    android:background="#00ffffff"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-light"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
