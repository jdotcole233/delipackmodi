<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/splashscreen_background"
    >

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="162dp"
        android:background="@drawable/rounded_home_buttons"
        android:fontFamily="@font/amiko_semibold"
        android:text="@string/sign_in_btn"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:elevation="40dp"
        />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/register_btn_background"
        android:fontFamily="@font/amiko_semibold"
        android:text="@string/sign_up_btn"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:text="@string/sign_up_btn"
        android:elevation="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/deli_s"

            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>



</RelativeLayout>