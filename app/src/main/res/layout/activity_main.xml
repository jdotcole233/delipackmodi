<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/splashscreen_background"
    >

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="162dp"
        android:background="@drawable/rounded_home_buttons"
        android:fontFamily="@font/amiko_semibold"
        android:text="@string/sign_in_btn"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:elevation="40dp"
        />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/register_btn_background"
        android:fontFamily="@font/amiko_semibold"
        android:text="@string/sign_up_btn"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:text="@string/sign_up_btn"
        android:elevation="40dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="40dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#e6e6e6"
        app:cardCornerRadius="200dp"
        android:alpha="0.9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/ic_moped"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sc_black_italic"
                android:gravity="center"
                android:text="@string/homecompname"
                android:textAllCaps="false"
                android:textColor="#ffbf00"
                android:textSize="42sp"
                android:layout_marginTop="-20dp"
                />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/amiko_bold"
                android:text="Delivery @ Ease"
                android:textAllCaps="true"
                android:textColor="#ffbf00"
                android:textSize="12sp"
                android:layout_marginTop="-15dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>